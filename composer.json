{
    "name": "netgen/layouts-contentful",
    "description": "Netgen Layouts & Contentful integration",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        }
    ],
    "require": {
        "netgen/layouts-core": "~1.1.0",
        "contentful/contentful-bundle": "^4.0",
        "doctrine/orm": "^2.6",
        "symfony-cmf/routing-bundle": "^2.1",
        "michelf/php-markdown": "^1.8",
        "aptoma/twig-markdown": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "symfony/phpunit-bridge": "^4.3",
        "symfony/var-dumper": "^3.4 || ^4.3",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-doctrine": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "vimeo/psalm": "^3.4",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "franzl/studio": "*"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon --level=7 --ansi lib bundle",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --level=7 --ansi tests",
        "psalm": "@php vendor/bin/psalm -c psalm.xml --show-info=false"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\Layouts\\Contentful\\": "lib/",
            "Netgen\\Bundle\\LayoutsContentfulBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "files": [
            "vendor/symfony/var-dumper/Resources/functions/dump.php"
        ],
        "psr-4": {
            "Netgen\\Layouts\\Contentful\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\LayoutsContentfulBundle\\Tests\\": "tests/bundle/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
